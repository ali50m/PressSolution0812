                               Content="{Binding ParaCamInfo.EndArr_1,Converter={StaticResource _aasatc}}" Tag="&#xf078;"  Command="{Binding EndArr_1SetCmd}"
                            IsEnabled="{Binding _ManagerRole}"/>

